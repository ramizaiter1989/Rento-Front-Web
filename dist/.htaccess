<IfModule mod_rewrite.c>
  RewriteEngine On

  # Force HTTPS
  RewriteCond %{HTTPS} !=on
  RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

  # Force non-www (www.rento-lb.com â†’ rento-lb.com)
  RewriteCond %{HTTP_HOST} ^www\.(.+)$ [NC]
  RewriteRule ^ https://%1%{REQUEST_URI} [L,R=301]

  # Do NOT rewrite real files or folders
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # SPA fallback (ONLY for routes)
  RewriteRule ^ index.html [L]
</IfModule>

# Correct MIME types
<IfModule mime_module>
  AddType application/javascript .js
  AddType text/css .css
  AddType application/json .json
  AddType image/svg+xml .svg
  AddType font/woff2 .woff2
</IfModule>

# Cache: Vite hashed assets (JS, CSS) - 1 year (immutable, filename changes on rebuild)
<IfModule mod_expires.c>
  ExpiresActive On
  <FilesMatch "\.(js|css)$">
    ExpiresDefault "access plus 1 year"
  </FilesMatch>
  <FilesMatch "\.(mp4|webm)$">
    ExpiresDefault "access plus 1 month"
  </FilesMatch>
  <FilesMatch "\.(png|jpg|jpeg|gif|webp|svg|ico)$">
    ExpiresDefault "access plus 1 month"
  </FilesMatch>
  <FilesMatch "\.(woff|woff2|ttf|eot)$">
    ExpiresDefault "access plus 1 year"
  </FilesMatch>
</IfModule>

<IfModule mod_headers.c>
  # Hashed assets in /assets/ are safe to cache forever
  <FilesMatch "assets/.*\.(js|css)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>

  # Images and video - 1 month
  <FilesMatch "\.(png|jpg|jpeg|gif|webp|svg|ico|mp4|webm)$">
    Header set Cache-Control "public, max-age=2592000"
  </FilesMatch>

  # Fonts - 1 year
  <FilesMatch "\.(woff|woff2|ttf|eot)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>

  # HTML - no cache (always fetch fresh for SPA routing)
  <FilesMatch "\.html$">
    Header set Cache-Control "no-cache, no-store, must-revalidate"
  </FilesMatch>

  # Security headers
  Header set X-Content-Type-Options "nosniff"
  Header set X-Frame-Options "SAMEORIGIN"
  Header set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>
